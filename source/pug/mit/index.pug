doctype html
html
	head
		title MIT License
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet")
		style.
			body {
				font-family: 'Roboto', sans-serif;
				padding: 0.4em;
				font-size: 1.1em;
				background: #eee;
				color: #5c5c5c;
				font-weight: 300;
			}
			article {
				background: #fff;
				border-radius: 2px;
				display: block;
				margin: 10px auto 0;
				box-shadow: 0 1px 2px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);
				transition: box-shadow: 0.2s ease-in-out;
				position: relative;
				max-width: 800px;
			}
			h1 {
				background: #e91e63;
				padding-left: 6%;
				color: #fff;
				border-top-left-radius: 2px;
				border-top-right-radius: 2px;
				height: 4.5em;
				width: 100%;
				margin: 0 auto;
				padding-top: 3.5em;
				padding-bottom: 0.7em;
				box-sizing: border-box;
				font-size: 2em;
				font-weight: 300;
			}
			.copyright {
				background: #e91e63;
				padding-left: 6%;
				color: #fce4ec;
				margin: 0;
				text-align: left;
				box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.2);
				font-size: 1em;
				padding-top: 0.6em;
				min-height: 3.6em;
				font-weight: 400;
				margin-top: 0;
			}
			.copyright a {
				color: #f8bbd0;
				text-decoration: none;
			}
			.top {
				padding: 2em 2em 0;
				text-align: justify;
			}
			.middle {
				padding: 0 2em;
				text-align: justify;
			}
			.end {
				color: #c2185b;
				padding: 0 2em 1.8em 2em;
				font-size: 0.9em;
				text-align: justify;
			}
			footer {
				margin: 0 auto;
				font-size: 0.8em;
				text-align: center;
			}


	body
		article
			h1 The MIT License (MIT)
			p.copyright Copyright &copy; 2018 #[a(href="http://www.dgreen.me") Daniel Green]
