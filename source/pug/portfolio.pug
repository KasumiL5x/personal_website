extends templates/layout

mixin MakePortfolio(filters, items)
	section.ng-container.portfolio
		div.portfolio-filter
			for value, i in filters
				a(href="#", data-filter=value.filter, class=(i === 0 ? "current" : "")) #{value.text}
				if (filters.length-1 != i )
					| /
		div.items-wrapper.ng-row.ng-row-wrap
			for value in items
				figure(data-categories=value.categories).ng-column
					div.content
						img.lazyload(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" class="ng-responsive-img" data-sizes="auto" data-src=value.image)
					div.overlay
						a(href=value.link): i(class="fa fa-search")

