block PathVariable
	- var Path = "./";

block Variables
	- var Title = "Default";
	- var Menu = { "Blog": Path+"blog", "About": Path+"index.html", "Portfolio": Path+"portfolio.html", "Articles": Path+"articles.html" };
	- var ActiveMenu = "About";

include mixins

doctype html
html
	head
		block Meta
			meta(charset='utf-8')
			meta(name='viewport', content='width=device-width, initial-scale=1')

		//- page scripts
		block Scripts
		script(defer src=Path + "js/jquery-3.1.0.min.js")
		script(defer src=Path + "js/application.js")

		//- page css
		block Styles
			link(href=Path + "css/font-awesome.min.css", rel="stylesheet")
			link(href=Path + "css/application.css", rel="stylesheet")

		title #{Title}
	body
		div.preloader
			div.logo-wrapper
				svg(viewBox="0 0 600 600")
					g
						path(d="M150.2,223.5v56.5h-5.6V189h5.6v29h85v187.8h-90.5v-5.6H202v-28.7h27.5v-68.8h-56v-5.6h56v-73.5H150.2z M206.1,375.6v24.6 h23.1v-24.6H206.1z M248,247.6v-59.8h5.6v59.8H248z M261.2,247.6v-59.8h5.6v59.8H261.2z")
						path(d="M373.1,226.8v30.8h-5.6v-60.1h5.6v23.7h89.1v187.2h-89.1v-5.6h83.5V226.8H373.1z M478.9,243.2v-62.7h5.6v62.7H478.9z M494.4,243.2v-62.7h5.6v62.7H494.4z")
					circle(class="logo-ring-bg" cx="300" cy="300" r="275.8")
					circle(class="logo-ring-anim" cx="300" cy="300" r="275.8")
			//- div.orbit
		div.header
			div.header__box
				div.header__logo
					a(href=Path+"index.html"): img(src=Path + "./img/dg.png")
				button.ng-button-clear.header__mobile-nav-toggle: span
			ul.header__nav
				for value, key in Menu
					li: a(href=value, class="header__nav__item " + (ActiveMenu === key ? "active" : "")) #{key}
		div.main
			div.page-content
				block PageContent
