extends templates/layout

mixin Timeline(type, items)
	div(class="timeline #{type}")
		div.timeline__content
			for value in items
				div.timeline__item
					div.timeline__item__header
						h4!= value.title
						h6
							span
								i(class="fa fa-globe")
								|  #{value.country}
							span
								i(class="fa fa-calendar-o")
								|  #{value.date}
					p!= value.desc

